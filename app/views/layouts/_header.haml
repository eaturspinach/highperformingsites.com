%header
  .container
    %h1#logo
      - if current_user
        %a{:href => dashboard_show_path, :title => "highperformingsites.com"}
          HIGHPERFORMINGSITES.COM
      - else
        %a{:href => root_path, :title => "highperformingsites.com"}
          HIGHPERFORMINGSITES.COM
    - if signed_in?
      %nav#main-nav
        %ul
          %li
            = link_to "Dashboard", dashboard_show_path
          %li
            = link_to "API Key"
          %li
            = link_to "Settings", edit_user_path(current_user)
          %li
            = link_to "Profile", current_user
          %li
            = link_to "All Users", users_path
          %li
            = link_to "Sign Out", signout_path, :method => :delete
    - else
      = render :partial => "shared/signin"