!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = title
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    = stylesheet_link_tag "blueprint/screen.css", "application.css", "jqmodal.css", :media => "screen, projection"
    = stylesheet_link_tag "blueprint/print.css", :media => "print"
  %body
    = render :partial => 'layouts/header'
    #content.container
      %section#flash.module
        %h2
          Status
        - flash.each do |key, value|
          %div{:class => "flash #{key}"}
            = "#{value}"
      = yield
    = render :partial => 'layouts/footer'
    = javascript_include_tag "jquery-1.4.2", "jqmodal", "jquery.validate.min", "application"
    = render :partial => 'analytics/google_analytics'
    / = debug(params) if Rails.env.development?