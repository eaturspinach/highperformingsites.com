!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = title
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    = stylesheet_link_tag "blueprint/screen.css", "application.css", "jqmodal.css", :media => "screen, projection"
    = stylesheet_link_tag "blueprint/print.css", :media => "print"
  %body
    .container
      %header
        %h1
          %a{:href => url_index_path, :title => "Site Speed Tracker"}
            HIGHPERFORMINGSITES.COM
        = render :partial => 'layouts/header'

        = yield
    %footer.container
      = render :partial => 'layouts/footer'
    = javascript_include_tag "jquery-1.4.2", "jqmodal", "application"
    = render :partial => 'analytics/google_analytics'
    = debug(params) if Rails.env.development?